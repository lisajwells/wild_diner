<html>
<head>
  <meta charset="UTF-8">
  <title>Sign up for Wild Diner</title>

</head>
<body>
  <!-- header -->
  <div class="container">

<div class="page-header">
  <div class="row">
    <div class="col-md-12">
      <h2>Wild Diner</h2>
    </div>
    <div class="col-md-12">
      <!-- <nav class="topnav"> -->
        <!-- <ul> -->
          <!-- <a href=""><li>Hunt-or-Found</li></a> -->
          <!-- <a href=""><li>Sightings</li></a><a href=""><li>My Sightings</li></a> -->
        <!-- </ul> -->
      <!-- </nav> -->
    </div>
  </div>    
</div>

    <!-- Begin page content -->

    <!-- Error message renders if login fails -->
    <% if @user_error %>
     <p class='form_error'>All fields required (photo is optional)</p>
    <% end %>



    <!-- Form to sign up -->
    <form role="form" id="signup_form" action="/users" method="POST">

      <div class="form-group">
        <label for="username">Username</label>
        <input type="text" name="username" class="form-control newUserRequired" id="signup_username" placeholder="username">
      </div>
      <div class="form-group">
        <label for="email">Email Address</label>
        <input type="text" name="email" class="form-control newUserRequired" id="signup_email" placeholder="email@address.com">
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password"  name="password" class="form-control newUserRequired" id="signup_password" placeholder="password">
      </div>
      <div class="form-group">
        <label for="photo_url">Profile Picture</label>
        <input type="text"  name="photo_url" class="form-control" id="signup_photo" placeholder="url_to_your_photo">
      </div>
      <div class="form-group">
        <label for="bio">Something about Yourself</label>
        <input type="textarea"  name="bio" class="form-control newUserRequired" id="signup_bio" placeholder="Tell us something about yourself.">
      </div>
      <button type="submit" class="btn btn-primary" name="signup_button" id="signup_submit">Sign me up!</button>
      <input name="authenticity_token" value="<%= form_authenticity_token() %>" type="hidden">

    </form>
  

  </div>

  <!-- end page content -->

	<%= render partial: "shared/footer" %>

</body>
</html>
